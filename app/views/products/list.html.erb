<div class="container">
<p style="color: green"><%= notice %></p>
<legend>Products</legend>
    <%= link_to "New product", new_product_path, class: "btn btn-outline-primary mr-2" %>
    <div id="products">
        <table class="table table-striped">
        <thead>
            <tr>
            <th scope="col">id</th>
            <th scope="col">title</th>
            <th scope="col">Sold</th>
            <th scope="col">Published</th>
            <th scope="col">#</th>
            </tr>
        </thead>
        <tbody>
            <% @products.each do |product| %>
            <tr>
                <th scope="row"><%= product.id %></th>
                <td><%= product.title %></td>
                <td><%= product.sold %></td>
                <td><%= product.published %></td>
                <td>
                    <div id="outer">
                        <div class="inner"><%= link_to "Edit", edit_product_path(product), class: "btn btn-primary" %></div>
                        <div class="inner"><%= button_to "Destroy", product, method: :delete, class: "btn btn-danger" %></div>
                    </div>
                </td>
            </tr>
            <% end %>
        </tbody>
        </table>
  </div>
</div>