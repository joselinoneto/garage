<div class="container">
  <p style="color: green"><%= notice %></p>
  <% if current_user_admin %>
    <div id="outer">
      <div class="inner"><%= link_to "Edit this product", edit_product_path(@product), class: "btn btn-primary" %></div>
      <div class="inner"><%= button_to "Destroy this product", @product, method: :delete, class: "btn btn-danger" %></div>
    </div>
  <% end %>

  <%= render @product %>

</div>
