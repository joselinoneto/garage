<div class="container">
  <main role="main">
    <section class="jumbotron text-center">
      <div class="container">
        <h1 class="jumbotron-heading">Garage Sales</legend>
        <p class="lead text-muted">Time to upgrade eletronics.</p>
      </div>
    </section>

    <div class="album py-5 bg-light">
      <div class="container">
        <div class="row">
          <% @products.each do |product| %>
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
              <%= image_tag product.thumbnail.variant(:thumb), class: "card-img-top" %>
                <div class="card-body">
                  <p class="card-text"><%= product.title %></p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <%= link_to "Details", product, class: "btn btn-sm btn-outline-secondary" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>