<div class="container">
  <main role="main">
    <section class="jumbotron text-center">
      <div class="container">
        <h1 class="jumbotron-heading">Garage Sales</legend>
        <p class="lead text-muted">Time to upgrade eletronics.</p>
      </div>
    </section>

    <div class="album py-5 bg-light">
      <div class="container">
        <div class="row">
          <% @products.each do |product| %>
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <%= image_tag product.thumbnail.variant(:thumb), class: "card-img-top" %>
                <div class="card-body">
                  <div class="d-flex justify-content-between align-items-center">
                    <div id="outer">
                      <div class="inner"><%= link_to product.title, product %></div>
                      <br>
                      <div class="inner"><%= link_to "Add", '#', class: "btn btn-sm btn-outline-secondary", onclick: "javascript: sendProduct('" + product.title + "'," + '10' + ")" %></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>