<div class="container">
  <main role="main">
    <p style="color: green"><%= notice %></p>
    <%= link_to "New product", new_product_path, class: "btn btn-outline-primary mr-2" %>
    <section class="jumbotron text-center">
      <div class="container">
        <h1 class="jumbotron-heading">Garage Sales</h1>
        <p class="lead text-muted">Time to upgrade eletronics.</p>
      </div>
    </section>

    <div class="album py-5 bg-light">
      <div class="container">
        <div class="row">
          <% @products.each do |product| %>
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Card image cap">
                <div class="card-body">
                  <p class="card-text"><%= product.title %></p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <%= link_to "Details", product, class: "btn btn-sm btn-outline-secondary" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>